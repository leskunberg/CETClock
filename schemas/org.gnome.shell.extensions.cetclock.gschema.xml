<schemalist gettext-domain="CETClock">
    <schema id="org.gnome.shell.extensions.cetclock" path="/org/gnome/shell/extensions/cetclock/">
        <key name="show-seconds" type="b">
            <default>true</default>
            <summary>Show seconds</summary>
        </key>
        <key name="time-text" type="s">
            <default>"CET"</default>
            <summary>Time text</summary>
        </key>
        <key name="show-date" type="b">
            <default>false</default>
            <summary>Show date</summary>
        </key>
        <key name="twelvehour-enabled" type="b">
            <default>false</default>
            <summary>Use 12-hour format</summary>
        </key>
        <key name="light-opacity" type="b">
            <default>true</default>
            <summary>Light opacity</summary>
        </key>
    </schema>
</schemalist>
